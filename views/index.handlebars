


<div class="container">


  <div class="jumbotron">
    <h1>Burgers!</h1>

    <h2>Get ready to eat!</h2>
  </div>


  <div>
    <h2>Burgers to Eat!</h2>
    <ul>
      {{#each burgers}}
      {{#unless eaten}}
      {{> burgers/burger-block eaten=false}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div>
    <h2>Eaten Burgers!</h2>
    <ul>
      {{#each burgers}}
      {{#if eaten}}
      {{> burgers/burger-block eaten=true}}
      {{/if}}
      {{/each}}
    </ul>
  </div>



  <div>
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burg" name="name">
      </div>


      <button type="submit">Add Burger</button>
    </form>
  </div>


</div>